# DashStory API Configuration

# Debug mode (set to false in production)
DEBUG=true

# Secret key for JWT signing (generate a secure random string for production)
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/dashstory

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI API (required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_TTS_MODEL=tts-1

# Object Storage (S3 compatible)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=dashstory
S3_REGION=us-east-1

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Audio settings
AUDIO_RETENTION_DAYS=7
MAX_AUDIO_LENGTH_SECONDS=300
